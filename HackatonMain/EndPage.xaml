<Page x:Class="HackatonMain.EndPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Background="Beige"
      xmlns:local="clr-namespace:HackatonMain" 
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndPage">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="18">
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"><Run FontSize="50" FontWeight="Bold"  Text="You're done !" /><LineBreak/>
        <Run FontSize="30" Text="Congratulations ! The registration process has been completed successfully. It took you a grand total of :"/></TextBlock>
        <TextBlock TextAlignment="Center" Margin="30" FontWeight="DemiBold" FontSize="25"  Text="{Binding Path=Time}"/>
        <TextBlock FontSize="20" TextAlignment="Center">
            <TextBlock.Text>
                We hope you had fun along the way !
            </TextBlock.Text> 
        </TextBlock>
        <TextBlock FontSize="20" TextAlignment="Center">
                You may now close this window, and maybe try again to set a faster time !
        </TextBlock>
    </StackPanel>
</Page>
