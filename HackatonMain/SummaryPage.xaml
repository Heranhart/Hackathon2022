<Page x:Class="HackatonMain.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HackatonMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="IndianRed"
      Title="SummaryPage" DataContext="{Binding ElementName=_main}">
    <StackPanel>
        <TextBlock>Summary :</TextBlock>
        <TextBlock>First Name : 
            <TextBlock Text="{Binding Path=FirstName}"/>
        </TextBlock>
        <TextBlock>Last Name : 
            <TextBlock Text="{Binding Path=LastName}"/>
        </TextBlock>

    </StackPanel>
</Page>
