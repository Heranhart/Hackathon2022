<Window 
    x:Class="HackatonMain.TosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" ResizeMode="NoResize" VerticalAlignment="Stretch"
        Title="Terms of service" Height="70" Width="359" Topmost="True" WindowStartupLocation="Manual" ShowInTaskbar="False"
        Closing="Window_Closing">
    <Grid>
        <TextBlock Name="TextBoxFail">
            Sorry, this is a dead link. The Terms of Service are actually <Hyperlink Click="OpenNewTos">here</Hyperlink>.
        </TextBlock>
        <TextBlock x:Name="TextBoxSuccess"><Run Text="You have read the terms of service."/><LineBreak/><Run Text="You can close this window."/></TextBlock>

    </Grid>
</Window>
